<div class="category-list-header">
  {{#header-category-details category=category subCategories=subCategories}}
    {{#if currentUser}}
      {{category-notifications-button category=category}}
    {{/if}}

    {{#if canCreateTopic}}
      {{d-button id="create-topic" class="btn-default" action="createTopic" icon="plus" label="topic.create"}}
    {{/if}}

    {{#if canEditCategory}}
      {{d-button class="btn-default edit-category" action="editCategory" actionParam=category icon="wrench" label="category.edit_long"}}
    {{/if}}
  {{/header-category-details}}
</div>